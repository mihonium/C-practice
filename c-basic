#include <stdio.h>
int main(void)//(はパーレン
{//{はブレース.ブロックを作る.
    printf("15から37を引いた値は%dです.\n",15-37);
    //()内は実引数.%dは"続く実引数の値を10進数decimalで表示"という変換指定.\nは"改行".;をつけることで文statementが成立.
    return 0;
}

#include <stdio.h>
int main(void)
{
    int vx=3.14;//3.14は初期化子.整数vxを3.14で初期化する(小数点以下は切り捨てられる)
    int vy=5.7;//5.7は初期化子.整数vyを5.7で初期化する(小数点以下は切り捨てられる)
    printf("vxの値は%dです.\n",vx);
    printf("vyの値は%dです.\n",vy);
    return 0;
}

#include <stdio.h>
int main(void)
{
    int no;
    printf("整数を入力してください:");
    scanf("%d",&no);//キーボードから10進数を読み込んで整数noボックスに格納する.&を忘れない.
    printf("%dに12を加えると%dです.\n",no,no+12);
    return 0;
}

#include <stdio.h>
int main(void)
{
    printf("ABCDE\n");//書式設定や数値入力可能だが改行文字の指定が必要.
    puts("ABCDE");//書式設定や数値入力不可能だが改行文字は自動出力される.
    return 0;
}

int main(void)
{
    int n;
    printf("整数を入力してください:");
    scanf("%d",&n);
    printf("10で除した商は%dです.\n",n/10);//nや10をoperandという./は商の整数部.
    printf("10で除した剰余は%dです.\n",n%10);//%は剰余
    printf("n%%10は%dです\n",n%10);
    //書式文字列中の%は変換指定に用いられるので%を表示するには連続表記する.
    return 0;
}

#include <stdio.h>
int main(void)
{
    double r;//double型は浮動小数点数
    printf("半径は:");
    scanf("%lf",&r);//lfに注意
    printf("円の面積は%fです.\n",3.14*r*r);//浮動小数点数なのでf
    return 0;
}

#include <stdio.h>
int main(void)
{
    int a,b;
    puts("二つの整数を入力してください.");//文字列のみの出力なので使用可能
    printf("整数a:"); scanf("%d",&a);
    printf("整数b:"); scanf("%d",&b);
    printf("aの値はbの%f%%です.\n",(double)a/b*100.0);
    //()はキャスト演算子.aはint型からdouble型にキャストされた.演算規則からbも自動的にキャストされる.
    printf("aの値はbの%f%%です.\n",100.0*a/b);
    //100.0が実数であるから、aとbは自動的に実数にキャストされる.
    return 0;
}

#include <stdio.h>
int main(void)
{
    double height,weight;
    printf("put your height:"); scanf("%lf",&height);
    printf("put your weight:"); scanf("%lf",&weight);
    printf("your BMI is %.2f.\n",weight/((height/100.0)*(height/100.0)));
    //%.2fは小数点以下を2桁で表示する.
    return 0;
}

#include <stdio.h>
//読み込んだ整数の絶対値を求める
int main(void)
{
    int num;
    printf("put an integer:"); scanf("%d",&num);
    if(num<0)//if文の()内は制御式control expression
        printf("absolute value is %d.\n",-num);
    else//elseは"そうでないなら"
        printf("absolute value is %d.\n",num);
    return 0;
}

#include <stdio.h>
//読み込んだ３つの整数値の最小値を求める
int main(void)
{
    int n1,n2,n3,min;
    puts("put three integers.");
    printf("integer1:"); scanf("%d",&n1);
    printf("integer2:"); scanf("%d",&n2);
    printf("integer3:"); scanf("%d",&n3);
    min=n1;//とりあえずn1をminに代入する
    if(n2<min)//n2の方が小さいならば
        min=n2;//minに代入する
    if(n3<min)//さらにn3の方が小さいならば
        min=n3;//minに代入する
    printf("min is %d.\n",min);
    return 0;
}

#include <stdio.h>
int main(void)
{
    int n1,n2, diff;
    puts("put two integers.");
    printf("integer1:"); scanf("%d",&n1);
    printf("integer2:"); scanf("%d",&n2);
    diff=(n1>n2)?n1-n2:n2-n1;
    //?:は3項間条件演算子.a?b:cでaが真ならばbを、偽ならばcを評価した値になる.
    printf("difference is %d.\n",diff);
    return 0;
}

#include <stdio.h>
int main(void)
{
    int score;
    printf("your score:"); scanf("%d",&score);
    if(score<0||score>100)//論理演算子.ANDが&&,ORが||
        puts("error");
    else if(score<=59)
        puts("不可");
    else if(score<=69)
        puts("可");
    else if(score<=79)
        puts("良");
    else if(score<=89)
        puts("優");
    else
        puts("秀");
    return 0;
}




















